<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_for_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Driver"
        android:textSize="30sp"
        android:paddingStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear1"
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/dispatcher_drivers_list"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear2"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_for_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Order"
        android:textSize="30sp"
        android:paddingStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include layout="@layout/new_order_item_layout" />
    </LinearLayout>

</RelativeLayout>